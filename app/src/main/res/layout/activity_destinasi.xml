<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBE00"
    android:padding="20dp">

    <TextView
        android:id="@+id/tujuan_anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TUJUAN KEBERANGKATAN"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <Spinner
        android:id="@+id/destinasi"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tujuan_anda"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="monospace" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinasi"
        android:text="TANGGAL KEBERANGKATAN"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/tvDatePergi"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:drawableEnd="@drawable/ic_date_range"
        android:drawableRight="@drawable/ic_date_range"
        android:ems="10"
        android:hint="Pilih Tanggal Keberangkatan"
        android:inputType="text"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="monospace" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDatePergi"
        android:text="TANGGAL KEMBALI"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/tvDateKembali"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:drawableEnd="@drawable/ic_date_range"
        android:drawableRight="@drawable/ic_date_range"
        android:ems="10"
        android:hint="Pilih Tanggal Kembali"
        android:inputType="textPersonName"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="monospace" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDateKembali"
        android:text="TIPE PERJALANAN"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="137dp"
        android:layout_height="108dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:onClick="notes"
        android:src="@drawable/pekerjaan"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="137dp"
        android:layout_height="108dp"
        android:layout_below="@id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/liburan"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:onClick="tempat"
        android:padding="20dp"
        android:text="Tempat Yang Dikunjungi "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="PEKERJAAN"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="LIBURAN"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />
</RelativeLayout>