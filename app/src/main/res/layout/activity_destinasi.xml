<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBE00"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tujuan_anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TUJUAN KEBERANGKATAN"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <EditText
        android:id="@+id/text1"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tujuan_anda"
        android:ems="10"
        android:hint="Tujuan Keberangkatan Anda"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:fontFamily="monospace" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:text="TANGGAL KEBERANGKATAN"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/tvDatePergi"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:drawableRight="@drawable/ic_date_range"
        android:ems="10"
        android:hint="Pilih Tanggal Keberangkatan"
        android:inputType="textPersonName"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:fontFamily="monospace" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDatePergi"
        android:text="TANGGAL KEMBALI"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/tvDateKembali"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:drawableRight="@drawable/ic_date_range"
        android:ems="10"
        android:hint="Pilih Tanggal Kembali"
        android:inputType="textPersonName"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:fontFamily="monospace" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDateKembali"
        android:text="TIPE PERJALANAN"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

    <ImageView
        android:id="@+id/notes"
        android:layout_width="137dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="208dp"
        android:layout_weight="1"
        android:onClick="notes"
        android:src="@drawable/pekerjaan" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="137dp"
        android:layout_height="108dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/liburan" />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:padding="20dp"
        android:text="Tempat Yang Dikunjungi "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="170dp"
        android:text="PEKERJAAN"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black"/>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="170dp"
        android:text="LIBURAN"
        android:textStyle="normal|bold"
        app:fontFamily="sans-serif-black" />

</RelativeLayout>