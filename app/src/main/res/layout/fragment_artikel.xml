<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ArtikelFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFBE00">

        <ImageView
            android:id="@+id/rekomendasi"
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/rekomendasi"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/tipsntrick"
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:layout_below="@+id/rekomendasi"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/tipsntrick"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView_rekomendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:text="@string/rekomendasi"
            android:textColor="@android:color/white"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/textView_tipsntrick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_rekomendasi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:text="@string/tips_dan_trik"
            android:textColor="@android:color/white"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif" />
    </RelativeLayout>


</ScrollView>